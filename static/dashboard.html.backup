<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meta-Orchestration Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #0a0e27;
            color: #e0e0e0;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        h1 {
            color: #61dafb;
            margin-bottom: 10px;
            font-size: 2em;
        }

        .session-info {
            background: #1a1f3a;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #61dafb;
        }

        .session-info h2 {
            font-size: 1.2em;
            margin-bottom: 10px;
            color: #61dafb;
        }

        .session-info p {
            margin: 5px 0;
            font-size: 0.95em;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: #1a1f3a;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .card h2 {
            color: #61dafb;
            margin-bottom: 15px;
            font-size: 1.3em;
            border-bottom: 2px solid #2a3f5f;
            padding-bottom: 10px;
        }

        .worker-card {
            margin-bottom: 15px;
            padding: 15px;
            background: #0f1729;
            border-radius: 6px;
            border-left: 4px solid #888;
        }

        .worker-card.running {
            border-left-color: #4caf50;
        }

        .worker-card.completed {
            border-left-color: #2196f3;
        }

        .worker-card.failed {
            border-left-color: #f44336;
        }

        .worker-card.blocked {
            border-left-color: #ff9800;
        }

        .worker-name {
            font-size: 1.1em;
            font-weight: bold;
            margin-bottom: 8px;
            color: #61dafb;
        }

        .worker-status {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 0.85em;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .status-running {
            background: #4caf50;
            color: white;
        }

        .status-idle {
            background: #888;
            color: white;
        }

        .status-completed {
            background: #2196f3;
            color: white;
        }

        .status-failed {
            background: #f44336;
            color: white;
        }

        .status-blocked {
            background: #ff9800;
            color: white;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: #0a0e27;
            border-radius: 4px;
            overflow: hidden;
            margin: 8px 0;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #61dafb, #4caf50);
            transition: width 0.3s ease;
        }

        .event-log {
            max-height: 400px;
            overflow-y: auto;
            background: #0f1729;
            padding: 15px;
            border-radius: 6px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
        }

        .event-item {
            margin-bottom: 10px;
            padding: 8px;
            background: #1a1f3a;
            border-radius: 4px;
            border-left: 3px solid #61dafb;
        }

        .event-time {
            color: #888;
            font-size: 0.85em;
        }

        .event-type {
            color: #61dafb;
            font-weight: bold;
            margin: 0 5px;
        }

        .review-panel {
            background: #0f1729;
            padding: 15px;
            border-radius: 6px;
            margin-top: 15px;
        }

        .review-item {
            background: #1a1f3a;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .verdict {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 4px;
            font-weight: bold;
            font-size: 0.85em;
        }

        .verdict-approved {
            background: #4caf50;
            color: white;
        }

        .verdict-concerns {
            background: #ff9800;
            color: white;
        }

        .verdict-blocker {
            background: #f44336;
            color: white;
        }

        .decision-panel {
            background: #0f1729;
            padding: 15px;
            border-radius: 6px;
            border-left: 4px solid #61dafb;
        }

        .decision-action {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .action-continue {
            color: #4caf50;
        }

        .action-warning {
            color: #ff9800;
        }

        .action-pause {
            color: #ff9800;
        }

        .action-stop {
            color: #f44336;
        }

        .controls {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .btn-primary {
            background: #61dafb;
            color: #0a0e27;
        }

        .btn-warning {
            background: #ff9800;
            color: white;
        }

        .btn-danger {
            background: #f44336;
            color: white;
        }

        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .status-indicator.active {
            background: #4caf50;
            animation: pulse 2s infinite;
        }

        .status-indicator.inactive {
            background: #888;
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #0a0e27;
        }

        ::-webkit-scrollbar-thumb {
            background: #61dafb;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Meta-Orchestration Dashboard</h1>

        <div class="session-info">
            <h2>Session Information</h2>
            <p><strong>Session ID:</strong> <span id="session-id">Loading...</span></p>
            <p><strong>User Prompt:</strong> <span id="user-prompt">Loading...</span></p>
            <p><strong>Status:</strong>
                <span class="status-indicator" id="status-indicator"></span>
                <span id="session-status">Loading...</span>
            </p>
        </div>

        <div class="grid">
            <div class="card">
                <h2>Worker Agents</h2>
                <div id="workers-container">
                    <p>Loading workers...</p>
                </div>
            </div>

            <div class="card">
                <h2>Latest Decision</h2>
                <div id="decision-container" class="decision-panel">
                    <p>Waiting for decisions...</p>
                </div>
            </div>
        </div>

        <div class="card">
            <h2>Peer Reviews</h2>
            <div id="reviews-container" class="review-panel">
                <p>No reviews yet...</p>
            </div>
        </div>

        <div class="card">
            <h2>Event Log</h2>
            <div id="event-log" class="event-log">
                <div class="event-item">
                    <span class="event-time">[System]</span>
                    <span class="event-type">INFO</span>
                    Dashboard initialized
                </div>
            </div>
        </div>

        <div class="controls">
            <button class="btn-primary" onclick="triggerReview()">Trigger Review</button>
            <button class="btn-warning" onclick="pauseOrchestration()">Pause</button>
            <button class="btn-primary" onclick="resumeOrchestration()">Resume</button>
            <button class="btn-danger" onclick="stopOrchestration()">Stop</button>
        </div>
    </div>

    <script>
        let eventSource = null;

        function initEventStream() {
            eventSource = new EventSource('/api/events/stream');

            eventSource.onmessage = function(event) {
                const data = JSON.parse(event.data);
                handleEvent(data);
            };

            eventSource.onerror = function(error) {
                console.error('SSE error:', error);
                addEventLog('ERROR', 'Lost connection to server, reconnecting...');
                setTimeout(initEventStream, 5000);
            };
        }

        function handleEvent(data) {
            if (data.type === 'workers_update') {
                updateWorkers(data.data);
            } else if (data.type === 'decision_update') {
                updateDecision(data.data);
            } else if (data.type === 'status_update') {
                updateStatus(data.data);
            }
        }

        function updateWorkers(workers) {
            const container = document.getElementById('workers-container');
            container.innerHTML = '';

            for (const [name, state] of Object.entries(workers)) {
                const card = document.createElement('div');
                card.className = `worker-card ${state.status}`;

                card.innerHTML = `
                    <div class="worker-name">${name.toUpperCase()}</div>
                    <span class="worker-status status-${state.status}">${state.status.toUpperCase()}</span>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${state.progress}%"></div>
                    </div>
                    <div style="font-size: 0.9em; color: #888;">Progress: ${state.progress}%</div>
                `;

                container.appendChild(card);
            }
        }

        function updateDecision(decision) {
            const container = document.getElementById('decision-container');
            const actionClass = decision.action.toLowerCase().replace('_', '-');

            container.innerHTML = `
                <div class="decision-action action-${actionClass}">${decision.action}</div>
                <div style="margin-bottom: 8px;"><strong>Reason:</strong> ${decision.reason}</div>
                <div><strong>Next Steps:</strong> ${decision.next_steps}</div>
            `;
        }

        function updateStatus(status) {
            const indicator = document.getElementById('status-indicator');
            const statusText = document.getElementById('session-status');

            if (status.is_complete) {
                indicator.className = 'status-indicator inactive';
                statusText.textContent = 'Complete';
            } else if (status.is_paused) {
                indicator.className = 'status-indicator inactive';
                statusText.textContent = 'Paused';
            } else if (status.is_running) {
                indicator.className = 'status-indicator active';
                statusText.textContent = 'Running';
            } else {
                indicator.className = 'status-indicator inactive';
                statusText.textContent = 'Idle';
            }
        }

        function addEventLog(type, message) {
            const log = document.getElementById('event-log');
            const time = new Date().toLocaleTimeString();

            const item = document.createElement('div');
            item.className = 'event-item';
            item.innerHTML = `
                <span class="event-time">[${time}]</span>
                <span class="event-type">${type}</span>
                ${message}
            `;

            log.insertBefore(item, log.firstChild);

            // Keep only last 50 events
            while (log.children.length > 50) {
                log.removeChild(log.lastChild);
            }
        }

        async function loadSessionInfo() {
            try {
                const response = await fetch('/api/session');
                const data = await response.json();

                if (!data.error) {
                    document.getElementById('session-id').textContent = data.session_id;
                    document.getElementById('user-prompt').textContent = data.user_prompt;
                }
            } catch (error) {
                console.error('Error loading session:', error);
            }
        }

        async function loadReviews() {
            try {
                const response = await fetch('/api/reviews');
                const data = await response.json();

                // TODO: Display reviews
            } catch (error) {
                console.error('Error loading reviews:', error);
            }
        }

        async function triggerReview() {
            try {
                await fetch('/api/control/review', { method: 'POST' });
                addEventLog('USER', 'Manual review triggered');
            } catch (error) {
                console.error('Error triggering review:', error);
            }
        }

        async function pauseOrchestration() {
            try {
                await fetch('/api/control/pause', { method: 'POST' });
                addEventLog('USER', 'Orchestration paused');
            } catch (error) {
                console.error('Error pausing:', error);
            }
        }

        async function resumeOrchestration() {
            try {
                await fetch('/api/control/resume', { method: 'POST' });
                addEventLog('USER', 'Orchestration resumed');
            } catch (error) {
                console.error('Error resuming:', error);
            }
        }

        async function stopOrchestration() {
            try {
                await fetch('/api/control/stop', { method: 'POST' });
                addEventLog('USER', 'Orchestration stopped');
            } catch (error) {
                console.error('Error stopping:', error);
            }
        }

        // Initialize
        window.addEventListener('load', () => {
            loadSessionInfo();
            initEventStream();

            // Refresh reviews periodically
            setInterval(loadReviews, 10000);
        });
    </script>
</body>
</html>
